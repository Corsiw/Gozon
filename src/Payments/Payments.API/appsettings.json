{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  
  "ConnectionStrings": {
    "PaymentsDatabase": "Data Source=data/payments.db"
  },
  "Kafka": {
    "Producer": {
      "BootstrapServers": "kafka:29092"
    },
    "Consumers": {
      "Orders": {
        "Topic": "OrderCreated",
        "BootstrapServers": "kafka:29092",
        "GroupId": "payments-service"
      }
    }
  }
}
